                    <Insets bottom="10.0" left="10.0" top="20.0"/>
                </VBox.margin>
            </Label>

            <ComboBox fx:id="countryChooser" layoutX="50.0" layoutY="50.0" prefHeight="35.0" prefWidth="199.0"
                      promptText="Choose 1 option">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="England"/>
                        <String fx:value="Wales"/>
                        <String fx:value="Northern Ireland"/>
                        <String fx:value="Scotland"/>
                    </FXCollections>
                </items>
                <VBox.margin>
                    <Insets left="20.0" right="20.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
